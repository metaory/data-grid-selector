---
// biome-ignore lint/correctness/noUnusedImports: Code component is used in template
import MobileWarning from '../components/MobileWarning.astro';
import '@fontsource/bungee-shade';
import '@fontsource/bungee';
import '@fontsource/baloo-2';
// biome-ignore lint/correctness/noUnusedVariables: used in template below
declare const __APP_VERSION__: string;
const appVersion = __APP_VERSION__;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, maximum-scale=1.0, minimum-scale=1.0" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />

		<!-- Primary Meta Tags -->
		<title>DataGrid Selector - Framework Agnostic Web Component</title>
		<meta name="title" content="DataGrid Selector - Framework Agnostic Web Component" />
		<meta name="description" content="A lightweight, framework-agnostic web component for boolean data visualization with drag selection, themes, and zero dependencies." />
		<meta name="keywords" content="web component, data grid, visualization, boolean data, drag selection, vanilla js" />
		<meta name="author" content="DataGrid Team" />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://github.com/metaory/data-grid-selector" />
		<meta property="og:title" content="DataGrid Selector - Framework Agnostic Web Component" />
		<meta property="og:description" content="A lightweight, framework-agnostic web component for boolean data visualization with drag selection, themes, and zero dependencies." />
		<meta property="og:image" content="/og-image.png" />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://github.com/metaory/data-grid-selector" />
		<meta property="twitter:title" content="DataGrid Selector - Framework Agnostic Web Component" />
		<meta property="twitter:description" content="A lightweight, framework-agnostic web component for boolean data visualization with drag selection, themes, and zero dependencies." />
		<meta property="twitter:image" content="/og-image.png" />

		<!-- Additional Meta Tags -->
		<meta name="robots" content="index, follow" />
	<meta name="theme-color" content="#11ffaa" />
	<link rel="canonical" href="https://github.com/metaory/data-grid-selector" />
	</head>
	<body>
		<slot />
		<MobileWarning />
		<script src="https://code.iconify.design/iconify-icon/3.0.0/iconify-icon.min.js"></script>
		<div class="version-badge">v{appVersion}</div>
	</body>
</html>

<style is:global>
  @import '../styles/theme.css';

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    font-family: "Baloo 2", Roboto, sans-serif;
  }

  body {
    font-family: "Baloo 2", Roboto, sans-serif;
    background: var(--surface-primary);
    color: var(--text-primary);
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  /* Ensure data-grid component handles overflow properly */
  data-grid {
    width: 100%;
    display: block;
  }

  .version-badge {
    position: fixed;
    right: 10px;
    bottom: 10px;
    backdrop-filter: blur(10px);
    color: var(--accent-secondary);
    mix-blend-mode: overlay;
    border-radius: 10px;
    padding: 6px 10px;
    font-family: monospace;
    font-size: 12px;
    font-weight: bold;
    z-index: 2000;
    opacity: .9;
  }
</style>

